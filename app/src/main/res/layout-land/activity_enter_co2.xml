<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_gradient"
        tools:context=".view.ui.EnterCo2Activity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/back"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:onClick="onBackButtonClicked"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/home"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:onClick="onHomeButtonClicked"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            android:id="@+id/consumptionTxt"
            android:layout_width="216dp"
            android:layout_height="20dp"
            android:text="@string/headline_consumption"
            android:textColor="@color/colorWhite" />

    <TextView
            android:id="@+id/transportTxt"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="20dp"
            android:text="@string/headline_transport"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />



    <Button
            android:id="@+id/meatBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/button_gradient"
            android:onClick="onFlightButtonClicked"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/meat_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/heatingBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/button_gradient"
            android:onClick="onFlightButtonClicked"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/heating_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/elBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/button_gradient"
            android:onClick="onFlightButtonClicked"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/el_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/ferryBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_gradient"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/bus_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/busBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_gradient"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/bus_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/scooterBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_gradient"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/moppet_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/trainBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/button_gradient"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/train_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/motorcycleBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/button_gradient"
            android:onClick="onFlightButtonClicked"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/motorcycle_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/carBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/button_gradient"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/car_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/flightBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/button_gradient"
            android:onClick="onFlightButtonClicked"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="@string/plane_btn"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText"
            android:textSize="22sp"
            android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>