<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define ViewModel -->
    <data>
        <variable
                name="viewmodel"
                type="com.example.ditco2aftryk.view.viewmodel.FlightCo2ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/flight_co2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient"
            tools:context=".view.ui.FlightCo2Activity"
>

        <TextView
                android:id="@+id/headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Plane_transport_headline"
                android:textColor="@color/colorTextfieldLightGreen"
                android:textSize="28sp"
                android:layout_marginBottom="600dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.381" />

        <EditText
                android:text="@={viewmodel.flightCo2Input}"
                android:id="@+id/enterHoursFlown"
                android:layout_width="216dp"
                android:layout_height="39dp"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/textfield_color"
                app:layout_constraintBottom_toTopOf="@id/calculatedCo2TextField"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/calculatedCo2TextField"
                android:layout_width="216dp"
                android:layout_height="39dp"
                android:textColor="@color/colorTextfieldLightGreen"
                android:textSize="20sp"
                android:background="@drawable/calculated_co2_field"
                android:layout_marginBottom="60dp"
                app:layout_constraintBottom_toTopOf="@id/saveCo2Btn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/enterHoursFlown"/>

        <TextView
                android:id="@+id/textHoursFlown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hours_flown"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toTopOf="@id/enterHoursFlown"
                app:layout_constraintHorizontal_bias="0.305"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        <TextView
                android:id="@+id/co2Emitted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/co2_emitted"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toTopOf="@id/calculatedCo2TextField"
                app:layout_constraintHorizontal_bias="0.308"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        <Button
                android:onClick="@{viewmodel::onSaveCo2ButtonClick}"
                android:id="@+id/saveCo2Btn"
                android:layout_width="178dp"
                android:layout_height="40dp"
                android:layout_marginBottom="350dp"
                android:background="@drawable/button_gradient"
                android:shadowColor="@color/colorBlack"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="8"
                android:text="@string/count_co2_btn"
                android:textAllCaps="false"
                android:textColor="@color/colorButtonText"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/calculatedCo2TextField" />

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_marginTop="380dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/co2windmill" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>